{
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["@vitest/browser/matchers"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/img/*": ["./src/assets/img/*"],
      "@/common": ["./src/components/common"],
      "@/common/*": ["./src/components/common/*"],
      "@/tests/*": ["./tests/*"]
    }
  },
  "include": ["src", "tests"]
}
