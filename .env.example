# ===========================================
# 로컬 개발 환경 설정
# 사용법: cp .env.example .env
# ===========================================

# --- Backend (apps/api) ---
NODE_ENV=development
PORT=4000
DATABASE_URL="postgresql://localhost:5432/myapp?schema=public"

# --- Frontend (apps/web) ---
VITE_API_BASE_URL=http://localhost:4000

# --- Storybook (apps/storybook) ---
VITE_STORYBOOK_MODE=true
VITE_ENABLE_MOCK_API=true
VITE_MOCK_DELAY=500

