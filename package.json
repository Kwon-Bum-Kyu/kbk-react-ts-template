{
  "name": "kbk-monorepo-template",
  "private": true,
  "packageManager": "npm@10.9.2",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:workspace": "vitest run",
    "test:workspace:watch": "vitest",
    "test:watch": "turbo run test:watch",
    "test:web": "turbo run test --filter=web",
    "test:api": "turbo run test --filter=api",
    "storybook": "turbo run dev --filter=storybook",
    "build-storybook": "turbo run build --filter=storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.1",
    "turbo": "^2.4.2",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
